---
import '../styles/global.css';

// 1. Definimos qué datos necesita este Layout para funcionar
interface Props {
	title: string;
	lang: string;
}

// 2. Extraemos esos datos de las propiedades que le pasemos
const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<script is:inline>
		// Este script evita el parpadeo (FOUC) al cargar la página
		if (
			localStorage.theme === 'dark' ||
			(!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
		) {
			document.documentElement.classList.add('dark');
		} else {
			document.documentElement.classList.remove('dark');
		}
	</script>
	<body class="bg-white dark:bg-slate-900 text-slate-900 dark:text-white transition-colors duration-300">
		<slot />
	</body>
</html>