---
const { lang } = Astro.props;

const t = {
  es: {
    title: "Â¿Buscando Talento Tech?",
    subtitle: "Hablemos sobre cÃ³mo puedo integrarme a tu equipo y aportar valor desde el primer dÃ­a.",
    name: "Nombre del Recruiter / Empresa",
    email: "Correo Corporativo",
    message: "Detalles sobre la vacante...",
    btn: "Iniciar ConversaciÃ³n",
  },
  en: {
    title: "Looking for Tech Talent?",
    subtitle: "Let's discuss how I can join your team and deliver value from day one.",
    name: "Recruiter Name / Company",
    email: "Corporate Email",
    message: "Details about the role...",
    btn: "Start Conversation",
  }
};

const content = lang === 'es' ? t.es : t.en;
---

<section id="contact" class="py-20 bg-gray-50 dark:bg-slate-900 transition-colors duration-300">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-4">
        {content.title}
      </h2>
      <p class="text-lg text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
        {content.subtitle}
      </p>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl p-8 md:p-12 border border-gray-100 dark:border-slate-700 relative overflow-hidden">
      <div class="absolute top-0 right-0 -mr-16 -mt-16 w-32 h-32 rounded-full bg-blue-500/10 blur-2xl"></div>
      
      <form id="contact-form" class="space-y-6 relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">{content.name}</label>
            <input type="text" name="name" id="name" required class="w-full px-4 py-3 rounded-lg bg-gray-50 dark:bg-slate-900 border border-gray-200 dark:border-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:ring-blue-500 outline-none transition-all" />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">{content.email}</label>
            <input type="email" name="email" id="email" required class="w-full px-4 py-3 rounded-lg bg-gray-50 dark:bg-slate-900 border border-gray-200 dark:border-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:ring-blue-500 outline-none transition-all" />
          </div>
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">{content.message}</label>
          <textarea name="message" id="message" rows="4" required class="w-full px-4 py-3 rounded-lg bg-gray-50 dark:bg-slate-900 border border-gray-200 dark:border-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:ring-blue-500 outline-none transition-all resize-none"></textarea>
        </div>
        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 rounded-lg transition-all shadow-lg hover:shadow-blue-500/30 transform hover:-translate-y-1">
          {content.btn}
        </button>
      </form>
    </div>
  </div>
</section>

<script is:inline>
  // Tu URL de n8n (AsegÃºrate que coincida con la de tu webhook test)
  const WEBHOOK_URL = "http://localhost:5678/webhook-test/contact";

  const form = document.getElementById('contact-form');
  
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault(); // ðŸ›‘ IMPORTANTE: Esto evita que la pÃ¡gina se recargue
      
      const submitBtn = form.querySelector('button[type="submit"]');
      const originalText = submitBtn.innerText;

      // Estado visual: "Enviando..."
      submitBtn.innerText = "Enviando... ðŸš€";
      submitBtn.disabled = true;

      // Capturar los datos del formulario
      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        message: formData.get('message'),
        lang: document.documentElement.lang
      };

      try {
        // Enviar los datos a n8n
        await fetch(WEBHOOK_URL, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        // Ã‰xito visual
        submitBtn.innerText = "Â¡Recibido! âœ…";
        submitBtn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
        submitBtn.classList.add('bg-green-600', 'text-white');
        form.reset(); // Limpia el formulario

        // Restaurar botÃ³n a los 3 segundos
        setTimeout(() => {
          submitBtn.innerText = originalText;
          submitBtn.disabled = false;
          submitBtn.classList.add('bg-blue-600', 'hover:bg-blue-700');
          submitBtn.classList.remove('bg-green-600');
        }, 3000);

      } catch (error) {
        console.error('Error:', error);
        submitBtn.innerText = "Error âŒ";
        setTimeout(() => submitBtn.disabled = false, 2000);
      }
    });
  }
</script>